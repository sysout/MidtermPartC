<h1>Listing olympics</h1>

<table>
  <thead>
    <tr>
      <th>Athlete name</th>
      <th>Event</th>
      <th>Country</th>
      <th>Medal type</th>
      <th>Event date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @olympics.each do |olympic| %>
      <tr>
        <td><%= olympic.athlete_name %></td>
        <td><%= olympic.event %></td>
        <td><%= olympic.country %></td>
        <td><%= olympic.medal_type.titleize %></td>
        <td><%= olympic.event_date %></td>
        <td><%= link_to 'Show', olympic %></td>
        <td><%= link_to 'Edit', edit_olympic_path(olympic) %></td>
        <td><%= link_to 'Destroy', olympic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

